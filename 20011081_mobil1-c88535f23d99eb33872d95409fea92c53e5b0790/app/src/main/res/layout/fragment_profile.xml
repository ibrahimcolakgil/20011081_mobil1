<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    android:orientation="horizontal"
    tools:context=".ProfileFragment"
    android:paddingTop="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly0"
            android:layout_below="@+id/profile_header"
            >

            <LinearLayout
                android:id="@+id/ly2"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ly1"
                android:padding="5dp"
                android:layout_weight="1"
                >


                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="First Name"/>

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="Last Name"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly2"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/savebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/design_default_color_secondary"
                    android:text="Save"
                    android:textAllCaps="false" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly0"
            android:padding="5dp"
            android:layout_weight="0"
            >

            <LinearLayout
                android:id="@+id/ly3_1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly1"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_education"
                    android:text="Education Information"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly3_2"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly3_1"
                android:padding="5dp">

                <EditText
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Education"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly4"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly3"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_info_txt"
                    android:text="Current Job Information"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly4_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly4"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="5dp">

                <EditText
                    android:id="@+id/country_et"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Country"/>

                <EditText
                    android:id="@+id/city_et"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="City"/>

                <EditText
                    android:id="@+id/company_et"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Company"/>


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly3"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/socials_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Socials (Preferably)"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly5"
            android:padding="1dp"
            >

            <EditText
                android:id="@+id/socials_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social Account Links"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly6"
            android:paddingTop="5dp"
            >

            <TextView
                android:id="@+id/contact_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly7"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <EditText
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/phone_num_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_weight="1"/>



        </LinearLayout>

    </RelativeLayout>
</ScrollView>